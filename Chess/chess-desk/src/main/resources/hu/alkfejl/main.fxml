<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.alkfejl.Controller">
   <children>
      <Label prefHeight="20.0" prefWidth="80.0" text="Chess" textFill="#008000">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="player_1" alignment="CENTER" focusTraversable="false" prefHeight="30.0" prefWidth="190.0" promptText="Player 1">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="player_2" alignment="CENTER" focusTraversable="false" prefHeight="30.0" prefWidth="190.0" promptText="Player 2">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Button focusTraversable="false" onAction="#switchToGame" prefHeight="35.0" prefWidth="110.0" text="Start" textAlignment="CENTER" textFill="#008000">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="games" focusTraversable="false" layoutX="70.0" layoutY="323.0" onAction="#listGames" prefHeight="14.0" prefWidth="74.0" text="Games" textAlignment="CENTER" textFill="#008000">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
